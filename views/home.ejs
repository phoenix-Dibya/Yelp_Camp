<% layout('../layout/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>

<h2>Welcome to YelpCamp Home</h2>
<ul>
    <% for (let c of campground) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(c.images.length) {%>
                <img
                    class="img-fluid img-thumbnail"
                    src="<%= c.images[0].url %> "
                    alt=""
                /><% } else { %><img
                    class="img-fluid img-thumbnail"
                    src=""
                    alt=""
                /><% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Title: <%= c.title %></h5>
                    <p class="card-text"><%= c.description %></p>
                    
                    <p class="card-text">
                        <small><%= c.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="/campground/<%= c._id %> "
                        ><%= c.title %>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>

